{
  "name": "collective_governance",
  "version": "0.4.2",
  "description": "Collective Governance JavaScript Reference",
  "main": "dist/index.js",
  "scripts": {
    "id": "node dist/id.js",
    "simple": "node dist/simplevote.js",
    "choice": "node dist/choicevote.js",
    "cancel": "node dist/cancel.js",
    "vaultpayment": "node dist/vaultpayment.js",
    "create_system": "node dist/create_system.js",
    "create_governance": "node dist/create_governance.js",
    "create_community": "node dist/create_community.js",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prettier:check": "prettier --check src/**/*.ts",
    "prettier:write": "prettier --write src/**/*.ts src/**/*.ts",
    "lint": "eslint ./src --ext .ts",
    "test": "jest"
  },
  "author": "John Cairns",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@types/jest": "28.1.7",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "eslint": "8.21.0",
    "jest": "^28.1.1",
    "prettier": "2.7.1",
    "ts-jest": "28.0.5",
    "ts-mockito": "2.6.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "@collectivexyz/governance": "0.8.11",
    "@types/node": "16.11.7",
    "dotenv": "16.0.1",
    "pino": "8.12.1",
    "web3": "1.10.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": "src/.*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}